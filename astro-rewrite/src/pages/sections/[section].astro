---
import MainLayout from '../../layouts/MainLayout.astro';
import ArticleCard from '../../components/ArticleCard.astro';
import { getArticlesBySection, getSectionById } from '../../utils/data';

export async function getStaticPaths() {
  // Since this is a legacy route structure, return empty array
  // The main section routes are handled by [slug].astro
  return [];
}

const { section } = Astro.params;
const sectionData = await getSectionById(section as string);
const articles = await getArticlesBySection(section as string);

if (!sectionData) {
  return Astro.redirect('/404');
}
---

<MainLayout title={`${sectionData.title} - Thilo`}>
  <div class="section-page">
    <div class="section-header">
      <div class="section-color" style={`background-color: ${sectionData.color_primary}`}></div>
      <h1>{sectionData.title}</h1>
      <p>{sectionData.content}</p>
    </div>
    
    <div class="section-content">
      {articles.length > 0 ? (
        <div class="articles-grid">
          {articles.map(article => (
            <ArticleCard article={article} />
          ))}
        </div>
      ) : (
        <div class="no-articles">
          <p>Derzeit sind keine Artikel für diese Stufe verfügbar.</p>
          <a href="/">Zurück zur Startseite</a>
        </div>
      )}
    </div>
    
    <nav class="section-nav">
      <a href="/" class="back-link">← Zurück zur Startseite</a>
    </nav>
  </div>
</MainLayout>

<style lang="scss">
  .section-page {
    max-width: 1000px;
    margin: 0 auto;
  }

  .section-header {
    text-align: center;
    padding: 2rem 0;
    margin-bottom: 2rem;

    .section-color {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      margin: 0 auto 1rem;
    }

    h1 {
      font-size: 2.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }

    p {
      font-size: 1.2rem;
      color: #666;
    }
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .no-articles {
    text-align: center;
    padding: 3rem 0;
    color: #666;

    p {
      font-size: 1.1rem;
      margin-bottom: 1rem;
    }

    a {
      color: #0066cc;
      text-decoration: none;
      font-weight: 500;

      &:hover {
        text-decoration: underline;
      }
    }
  }

  .section-nav {
    text-align: center;
    margin-top: 2rem;
    
    .back-link {
      color: #0066cc;
      text-decoration: none;
      font-weight: 500;
      
      &:hover {
        text-decoration: underline;
      }
    }
  }
</style>
